{
  "name": "mikroapm",
  "description": "Ultralight uptime monitoring with pluggable storage adapters",
  "version": "1.0.0",
  "author": "Mikael Vesavuori",
  "license": "MIT",
  "keywords": [
    "uptime",
    "monitoring",
    "apm",
    "health-check",
    "cloudflare-workers",
    "hono"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikaelvesavuori/mikroapm"
  },
  "bugs": {
    "url": "https://github.com/mikaelvesavuori/mikroapm/issues"
  },
  "homepage": "https://github.com/mikaelvesavuori/mikroapm",
  "main": "src/index.js",
  "type": "module",
  "exports": {
    ".": "./src/index.js",
    "./server": "./src/adapters/hono-server/index.js",
    "./workers": "./src/adapters/cf-workers/index.js",
    "./storage": "./src/storage/index.js",
    "./core": "./src/core/index.js"
  },
  "files": [
    "src",
    "scripts",
    "examples",
    "LICENSE",
    "README.md",
    "mikroapm.config.example.json",
    "wrangler.example.toml"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "build:server": "node scripts/build.js server",
    "build:workers": "node scripts/build.js workers",
    "build": "node scripts/build.js",
    "cleanup": "node scripts/cleanup.js",
    "deploy:workers": "npx wrangler deploy -c wrangler.toml",
    "dev:server": "node examples/server/dev.js",
    "licenses": "grant check sbom.json --config .grant.yaml",
    "lint:fix": "biome check . --write",
    "lint": "biome check .",
    "prepare": "husky",
    "sbom": "syft file:package-lock.json --output spdx-json > ./sbom.json",
    "scan": "grype ./sbom.json -o json",
    "start:server": "node examples/server/start.js",
    "teardown:workers": "npx wrangler delete --name mikroapm",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test": "vitest run"
  },
  "devDependencies": {
    "@biomejs/biome": "2",
    "@hono/node-server": "1",
    "esbuild": "latest",
    "husky": "9",
    "typescript": "5",
    "vitest": "4",
    "wrangler": "4"
  },
  "dependencies": {
    "hono": "4",
    "mikrovalid": "1",
    "pikodb": "1"
  }
}